{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "install",
      "args": [],
      "suppressTaskName": false
    },
    {
      "taskName": "lint",
      "args": [
        "run",
        "lint"
      ],
      "problemMatcher": [
        "$eslint-compact",
        "$eslint-stylish"
      ]
    },
    {
      "taskName": "test",
      "args": [
        "run",
        "test"
      ]
    },
    {
      "taskName": "dev",
      "args": [
        "run",
        "dev"
      ]
    }
  ]
}
